%-*-Mode:erlang;coding:utf-8;tab-width:4;c-basic-offset:4;indent-tabs-mode:()-*-
% ex: set ft=erlang fenc=utf-8 sts=4 ts=4 sw=4 et nomod:

{deps,
 [{cloudi_core, ".*",
   {git, "https://github.com/CloudI/cloudi_core.git",
    {branch, "master"}}},
  {cloudi_service_http_cowboy, ".*",
   {git, "https://github.com/CloudI/cloudi_service_http_cowboy1.git",
    {branch, "master"}}},
  {cloudi_service_db_pgsql, ".*",
   {git, "https://github.com/CloudI/cloudi_service_db_pgsql.git",
    {tag, "v1.7.4"}}},
  %{cloudi_service_db_riak, ".*",
  % {git, "https://github.com/okeuday/cloudi_service_db_riak.git",
  %  {branch, "master"}}}, % unmaintained
  {jsx, ".*",
   {git, "https://github.com/talentdeficit/jsx.git",
    {tag, "v2.8.3"}}}]}.

{erl_opts,
 [debug_info,
  {platform_define, "^19\.", 'ERLANG_OTP_VERSION_19'},
  {platform_define, "^20\.", 'ERLANG_OTP_VERSION_20'},
  warnings_as_errors,
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.
{edoc_opts,
 [{preprocess, true}]}.
{clean_files, ["test/*.beam"]}.
{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.
{xref_warnings, true}.
{cover_enabled, false}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.
